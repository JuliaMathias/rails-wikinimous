<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 10, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-secondary mt-3 mb-5" %>
<% end %>
